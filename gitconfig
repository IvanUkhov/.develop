[core]
	excludesfile = ~/.develop/gitignore

[user]
	name = Ivan Ukhov
	email = ivan.ukhov@gmail.com

[color]
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = cyan
	frag = magenta
	old = red
	new = green

[color "status"]
	added = green
	changed = cyan
	untracked = yellow

[push]
	default = simple

[alias]
	a = add
	ap = add --patch
	b = branch
	c = commit
	ca = commit --amend
	cf = config
	cl = config --list
	co = checkout
	d = diff
	ds = diff --staged
	g = grep --line-number
	l = log
	p = push
	pl = pull
	s = status
	sm = submodule foreach git checkout master
	sp = submodule foreach git pull
	su = submodule update --init
